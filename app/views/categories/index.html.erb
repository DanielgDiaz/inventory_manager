<% if notice %>
    <aside id="notice" class="small-container center-block my-5"><%= notice %></aside>
<% end %>



<div class="center-block row">
<table class="table table-striped table-hover mt-2 center-block">
  <thead class="thead-dark">
    <tr>
      <h1 class="text-center">Categorias</h1>
    </tr>
  </thead>

  <tbody >
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-info col-3 ' %></td>    
        <td><%= link_to 'Eliminar', eliminar_category_path(category), class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Añadir Categoría', new_category_path, class:'text-white mt-2 mx-2 btn btn-primary' %>

