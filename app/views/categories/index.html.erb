<p id="notice"><%= notice %></p>


<%= link_to 'Añadir Categoría', new_category_path, class:'text-dark' %>
<div class="center-block">
<table class="table table-striped table-dark large-container center-block">
  <thead>
    <tr>
      <th>Categorias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr >
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-info' %></td>    
        <td><%= link_to 'Eliminar', eliminar_category_path(category), class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


