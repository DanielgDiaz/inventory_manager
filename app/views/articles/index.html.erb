<% if notice %>
    <aside id="notice" class="small-container center-block my-5"><%= notice %></aside>
<% end %>

<h1 class="text-center">Articulos</h1>


<div class="center-block row">
<table class="table table-striped table-hover mt-2 center-block">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Ubicación</th>
      <th>Precio</th>
    </tr>
  </thead>

  <tbody >
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.quantity %> Unidades</td>
        <td><%= article.location.name %></td>
        <td><%= article.price %>€</td>
        <td><%= link_to 'Edit', edit_article_path(article), class:'btn btn-info' %></td>    
        <td><%= link_to 'Eliminar', eliminar_article_path(article), class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Article', new_article_path %>

