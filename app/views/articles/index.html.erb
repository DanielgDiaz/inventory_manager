<% if notice %>
    <aside id="notice" class="small-container center-block my-5"><%= notice %></aside>
<% end %>

<h1>Articles</h1>


<% @articles.each do |article| %>
<div class="card-group">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= article.title%></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= article.price %></h6>
      <h6 class="card-subtitle mb-2 text-muted"><%= article.location.name %></h6>
      <p class="card-text"><%= truncate(strip_tags(article.description), length: 200) %></p>
      <div class="">
      <%= link_to 'Show', article %>
      <%= link_to 'Edit', edit_article_path(article) %>
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</div>

<% end %>

<%= link_to 'New Article', new_article_path %>