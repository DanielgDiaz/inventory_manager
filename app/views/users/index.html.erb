<p id="notice"><%= notice %></p>

<%= link_to 'New User', new_user_path, class:'btn btn-info' %>

<table class="table table-striped table-dark large-container center-block">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-info' %></td>
        <td><%= link_to 'Eliminar', eliminar_user_path(user), class:'btn btn-danger' %></td>   
      </tr>
    <% end %>
  </tbody>
</table>

<br>


