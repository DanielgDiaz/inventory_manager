<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>


<div class="center-block row">
<table class="table table-striped table-hover mt-2 center-block">
  <thead class="thead-dark">
    <tr>
      <h1 class="text-center">Ubicaciones</h1>
    </tr>
  </thead>

  <tbody >
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class:'btn btn-info col-3 ' %></td>    
        <td><%= link_to 'Eliminar', eliminar_location_path(location), class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Location', new_location_path %>
